<div class="page-container">
    <h1 class="page-title">Registrations</h1>

    <% if (session && session.access_level === "manager") { %>
        <a href="/registrations/new" class="btn btn-primary btn-small mb-4">
            + Add Registration
        </a>
    <% } %>

    <table>
        <thead>
            <tr>
                <th>Event</th>
                <th>Date</th>
                <th>Participant</th>
                <th>Status</th>
                <th>Attended?</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% registrations.forEach(r => { %>
                <tr>
                    <td><%= r.event_name %></td>
                    
                    <td><%= new Date(r.starts_at).toLocaleString() %></td>
                    
                    <td><%= r.first_name %> <%= r.last_name %></td>
                    
                    <td><%= r.status %></td>
                    
                    <td><%= r.attended ? "Yes" : "No" %></td>

                    <td class="table-actions">
                        <a href="/registrations/<%= r.event_occurrence_id %>/<%= r.participant_id %>">
                            View
                        </a>

                        <% if (session && session.access_level === "manager") { %>
                            <a href="/registrations/<%= r.event_occurrence_id %>/<%= r.participant_id %>/edit">Edit</a>

                            <form action="/registrations/<%= r.event_occurrence_id %>/<%= r.participant_id %>/delete" 
                                  method="POST" style="display:inline;">
                                <button class="btn btn-danger btn-small" style="padding:0.2rem 0.6rem;">
                                    Delete
                                </button>
                            </form>
                        <% } %>

                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>