<section class="page-container">
    <div class="page-card-form">

        <h1 class="page-title">Edit Milestone Type</h1>
        <p class="text-muted">
            Renaming this milestone will update it across all participant records.
        </p>

        <form action="/milestones/type/<%= encodeURIComponent(oldTitle) %>/edit" method="POST" class="form">

            <label for="MilestoneTitle">Milestone Title</label>
            <input id="MilestoneTitle" type="text" name="MilestoneTitle" value="<%= oldTitle %>"
                placeholder="Enter new milestone title" required />

            <div class="btn-wrapper" style="margin-top: 2rem;">
                <button type="submit" class="btn btn-primary btn-lg">
                    Save New Title
                </button>

                <a href="/milestones/type/<%= encodeURIComponent(oldTitle) %>" class="btn btn-secondary btn-lg">
                    Cancel
                </a>
            </div>

        </form>

    </div>
</section>