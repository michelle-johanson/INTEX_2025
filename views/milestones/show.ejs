<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <%- include("../partials/navbar") %>

        <div class="container mt-4">

            <h1>
                <%= milestone.title %>
            </h1>

            <p><strong>Description:</strong>
                <%= milestone.description %>
            </p>

            <p><strong>Assigned To:</strong>
                <%= participant.first_name %>
                    <%= participant.last_name %>
            </p>

            <p><strong>Status:</strong>
                <% if (milestone.completed) { %>
                    <span class="text-success fw-bold">Completed</span>
                    <% } else { %>
                        <span class="text-danger fw-bold">Not Completed</span>
                        <% } %>
            </p>

            <% if (session.access_level==="admin" ) { %>
                <a href="/milestones/<%= milestone.id %>/edit" class="btn btn-warning">Edit</a>

                <form action="/milestones/<%= milestone.id %>/delete" method="POST" style="display:inline;">
                    <button class="btn btn-danger">Delete</button>
                </form>
                <% } %>

                    <br><br>
                    <a href="/milestones" class="btn btn-secondary">Back</a>

        </div>
</body>

</html>