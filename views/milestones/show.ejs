<div class="page-container">

    <h1 class="page-title">Milestone Details</h1>

    <div class="detail-card">

        <div class="detail-row">
            <span class="detail-label">Title</span>
            <span class="detail-value"><%= milestone.title %></span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Participant</span>
            <span class="detail-value">
                <%= milestone.first_name %> <%= milestone.last_name %> 
                (ID #<%= milestone.participant_id %>)
            </span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Date</span>
            <span class="detail-value">
                <%= milestone.achieved_date ? new Date(milestone.achieved_date).toLocaleDateString() : 'N/A' %>
            </span>
        </div>

        <% if (session && session.access_level === "manager") { %>
            <div class="detail-actions">
                <a href="/milestones/<%= milestone.participant_id %>/<%= milestone.milestone_no %>/edit">Edit</a>
            </div>
        <% } %>

    </div>

</div>