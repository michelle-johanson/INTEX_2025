<div class="page-container">

    <h1 class="page-title">Milestone Details</h1>

    <div class="detail-card">

        <div class="detail-row">
            <span class="detail-label">Title</span>
            <span class="detail-value"><%= milestone.MilestoneTitle %></span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Participant</span>
            <span class="detail-value">
                <% if (participant) { %>
                    <%= participant.FirstName %> <%= participant.LastName %>
                    (ID #<%= participant.ParticipantID %>)
                <% } else { %>
                    ID #<%= milestone.ParticipantID %>
                <% } %>
            </span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Date</span>
            <span class="detail-value"><%= milestone.MilestoneDate %></span>
        </div>

        <% if (session && session.access_level === "manager") { %>
            <div class="detail-actions">
                <a href="/milestones/<%= milestone.MilestoneID %>/edit">Edit</a>
            </div>
        <% } %>

    </div>

</div>
