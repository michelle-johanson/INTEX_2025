<section class="page-container">
    <div class="page-card-wide">

        <h1 class="page-title">Milestone Details</h1>

        <div class="detail-card">

            <div class="detail-row">
                <span class="detail-label">Title</span>
                <span class="detail-value">
                    <%= milestone.title %>
                </span>
            </div>

            <div class="detail-row">
                <span class="detail-label">Participant</span>
                <span class="detail-value">
                    <%= milestone.first_name %>
                        <%= milestone.last_name %>
                            (ID #<%= milestone.participant_id %>)
                </span>
            </div>

            <div class="detail-row">
                <span class="detail-label">Date Achieved</span>
                <span class="detail-value">
                    <%= milestone.achieved_date ? new Date(milestone.achieved_date).toLocaleDateString() : 'N/A' %>
                </span>
            </div>

        </div>

        <% const role=session && session.access_level ? session.access_level.toLowerCase() : "" ; const
            isManager=role==="manager" || role==="admin" ; %>

            <% if (isManager) { %>
                <div class="btn-wrapper" style="margin-top: 2rem;">

                    <a href="/milestones/<%= milestone.participant_id %>/<%= milestone.milestone_no %>/edit"
                        class="btn btn-primary btn-lg">
                        Edit Milestone
                    </a>

                    <form action="/milestones/<%= milestone.participant_id %>/<%= milestone.milestone_no %>/delete"
                        method="POST"
                        onsubmit="return confirm('Delete this milestone? This action cannot be undone.');">
                        <button class="btn btn-delete btn-lg">Delete Milestone</button>
                    </form>

                </div>
                <% } %>

                    <div class="btn-wrapper" style="margin-top: 2rem;">
                        <a href="/milestones/participant/<%= milestone.participant_id %>"
                            class="btn btn-secondary btn-lg">
                            ‚Üê Back to Milestones
                        </a>
                    </div>

    </div>
</section>