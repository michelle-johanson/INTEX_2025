<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <%- include("../partials/navbar") %>

        <div class="container mt-4">

            <h1>Milestones</h1>

            <% if (session.access_level==="admin" ) { %>
                <a href="/milestones/new" class="btn btn-primary mb-3">Add Milestone</a>
                <% } %>

                    <ul class="list-group">
                        <% milestones.forEach(m=> { %>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>
                                    <%= m.title %> â€”
                                        <% if (m.completed) { %>
                                            <span class="text-success fw-bold">Completed</span>
                                            <% } else { %>
                                                <span class="text-danger fw-bold">Not Completed</span>
                                                <% } %>
                                </span>
                                <a href="/milestones/<%= m.id %>" class="btn btn-outline-secondary btn-sm">Details</a>
                            </li>
                            <% }) %>
                    </ul>

        </div>
</body>

</html>