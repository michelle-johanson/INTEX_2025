<div class="page-container">

    <h1 class="page-title">Milestones</h1>

    <% if (session && session.access_level === "manager") { %>
        <a href="/milestones/new" class="btn btn-primary btn-small mb-4">
            + Add Milestone
        </a>
    <% } %>

    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Participant</th> 
                <th>Date</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            <% milestones.forEach(m => { %>
                <tr>
                    <td><%= m.title %></td>
                    
                    <td>
                        <%= m.first_name %> <%= m.last_name %>
                    </td>
                    
                    <td>
                        <%= m.achieved_date ? new Date(m.achieved_date).toLocaleDateString() : '' %>
                    </td>

                    <td class="table-actions">
                        <a href="/milestones/<%= m.participant_id %>/<%= m.milestone_no %>">View</a>

                        <% if (session && session.access_level === "manager") { %>
                            <a href="/milestones/<%= m.participant_id %>/<%= m.milestone_no %>/edit">Edit</a>

                            <form action="/milestones/<%= m.participant_id %>/<%= m.milestone_no %>/delete" 
                                  method="POST" 
                                  style="display:inline;">
                                <button class="btn btn-danger btn-small" style="padding:0.2rem 0.6rem;">
                                    Delete
                                </button>
                            </form>
                        <% } %>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

</div>