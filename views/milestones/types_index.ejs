<section class="page-container">
    <div class="container-inner">

        <!-- HEADER -->
        <div class="container-header">
            <h1 class="page-title">Milestone Achievements Directory</h1>
            <div class="heading-underline"></div>
        </div>

        <p class="text-muted">
            Select a milestone type below to view all participants who have achieved it.
        </p>

        <% 
            const role = session && session.access_level 
                ? session.access_level.toLowerCase() 
                : '';
            const isAdmin = role === "admin" || role === "manager";
        %>

        <!-- EMPTY STATE -->
        <% if (milestoneTypes.length === 0) { %>

            <p>No milestone types have been recorded yet.</p>

        <% } else { %>

            <!-- TABLE -->
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Milestone Type</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        <% milestoneTypes.forEach(title => { %>
                            <tr>
                                <td><strong><%= title %></strong></td>

                                <td class="table-actions">
                                    <a href="/milestones/type/<%= encodeURIComponent(title) %>"
                                       class="btn btn-outline btn-table">
                                        View Participants
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

        <% } %>

        <!-- BACK BUTTON -->
        <div class="btn-wrapper" style="margin-top: 2rem;">
            <a href="/participants" class="btn btn-secondary btn-lg">
                ‚Üê Back to Participant Directory
            </a>
        </div>

    </div>
</section>
