<section class="page-container">
    <div class="container-inner">

        <!-- HEADER -->
        <div class="container-header">
            <h1 class="page-title">Milestone Achievements Directory</h1>
            <div class="heading-underline"></div>
        </div>

        <p class="text-muted">
            Select a milestone type below to view all participants who have achieved it.
        </p>

        <% 
            const role = session && session.access_level 
                ? session.access_level.toLowerCase() 
                : '';
            const isAdmin = role === "admin" || role === "manager";
        %>

        <!-- SEARCH BAR -->
        <div style="display: flex; justify-content: flex-end; margin-bottom: 1.5rem;">
            <form action="/milestones" method="GET" class="search-form">
                <input type="text" 
                       name="search" 
                       placeholder="Search milestones..." 
                       value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>" 
                       class="search-input"
                >
                <button type="submit" class="btn-search">Search</button>
                
                <% if (typeof searchTerm !== 'undefined' && searchTerm) { %>
                    <a href="/milestones" style="color: #666; text-decoration: none; font-size: 0.9rem;">Clear</a>
                <% } %>
            </form>
        </div>

        <!-- EMPTY STATE -->
        <% if (milestoneTypes.length === 0) { %>

            <p>No milestone types found matching your search.</p>

        <% } else { %>

            <!-- TABLE -->
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Milestone Type</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% milestoneTypes.forEach(title => { %>
                            <tr>
                                <td><strong><%= title %></strong></td>

                                <td class="table-actions">
                                    <!-- Use encodeURIComponent to handle spaces in titles (e.g. "Python Certificate") -->
                                    <a href="/milestones/type/<%= encodeURIComponent(title) %>"
                                       class="btn btn-outline btn-table">
                                        View Participants
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

        <% } %>

        <!-- BACK BUTTON -->
        <div class="btn-wrapper" style="margin-top: 2rem;">
            <a href="/participants" class="btn btn-secondary btn-lg">
                ‚Üê Back to Participant Directory
            </a>
        </div>

    </div>
</section>