<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <%- include("../partials/navbar") %>

        <div class="container mt-4" style="max-width: 600px;">

            <h1>Edit Milestone</h1>

            <form action="/milestones/<%= milestone.id %>/edit" method="POST">

                <div class="mb-3">
                    <label>Title</label>
                    <input name="title" class="form-control" value="<%= milestone.title %>" required>
                </div>

                <div class="mb-3">
                    <label>Description</label>
                    <textarea name="description" class="form-control"><%= milestone.description %></textarea>
                </div>

                <div class="mb-3">
                    <label>Assign to Participant</label>
                    <select name="participant_id" class="form-control">
                        <% participants.forEach(p=> { %>
                            <option value="<%= p.id %>" <%=p.id===milestone.participant_id ? "selected" : "" %>>
                                <%= p.first_name %>
                                    <%= p.last_name %>
                            </option>
                            <% }) %>
                    </select>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" name="completed" id="completed"
                        <%=milestone.completed ? "checked" : "" %>>
                    <label class="form-check-label" for="completed">Mark as completed</label>
                </div>

                <button class="btn btn-success">Save Changes</button>
            </form>

            <br>
            <a href="/milestones" class="btn btn-secondary">Cancel</a>

        </div>
</body>

</html>