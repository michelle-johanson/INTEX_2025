            All Rights Reserved.
    </p>

</footer>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const teapot = document.getElementById("teapot-trigger");

        if (!teapot) {
            console.log("‚ùå Teapot element not found when DOM loaded");
            return;
        }

        console.log("‚úÖ Teapot script loaded & listener attached");

        teapot.addEventListener("click", () => { // Removed 'event' parameter

            console.log("ü´ñ Teapot clicked ‚Äî fetching /teapot...");

            fetch('/teapot')
                .then(response => {
                    console.log(`Status Code received: ${response.status}`);
                    console.log(`Status Text: ${response.statusText}`);

                    if (response.status === 418) {
                        console.log("‚ú® Easter egg found!");
                    }
                })
                .catch(error => console.error('‚ùå Error fetching the teapot:', error));
        });
    });
</script>