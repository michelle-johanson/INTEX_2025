            <%= addLabel || "Add New" %>
        </a>
    <% } %>

    <form method="GET" action="<%= searchAction || '' %>" class="search-form">
        <input 
            type="text" 
            name="<%= 'q' %>" 
            value="<%= query || '' %>"
            placeholder="<%= searchPlaceholder || 'Searchâ€¦' %>"
            class="search-input" 
        />

        <button type="submit" class="btn-search">
            Search
        </button>
    </form>

</div>
