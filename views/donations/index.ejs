<div class="page-container">

    <h1 class="page-title">Donations</h1>

    <% const isManager = session.access_level && (session.access_level.toLowerCase() === "manager" || session.access_level.toLowerCase() === "admin"); %>

    <div class="d-flex mb-3" style="justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem;">
        
        <!-- Action Button (Manager Only) -->
        <% if (isManager) { %>
            <a href="/donations/new" class="btn btn-primary btn-small">
                + Add Donation
            </a>
        <% } else { %>
            <div></div>
        <% } %>

        <!-- Search Bar -->
        <form action="/donations" method="GET" class="d-flex" style="gap: 0.5rem; align-items: center;">
            <input type="text" 
                   name="search" 
                   placeholder="Search donor name..." 
                   value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>"
                   style="padding: 0.4rem; border: 1px solid #ccc; border-radius: 4px; width: 250px;"
            >
            <button type="submit" class="btn btn-secondary btn-small">Search</button>
            
            <% if (typeof searchTerm !== 'undefined' && searchTerm) { %>
                <a href="/donations" style="font-size: 0.9rem;">Clear</a>
            <% } %>
        </form>
    </div>

    <% if (donations.length === 0) { %>
        <p>No donations found.</p>
    <% } else { %>
        <table>
            <thead>
                <tr>
                    <th>Participant</th>
                    <th>Date</th>
                    <th>Amount</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                <% donations.forEach(d => { %>
                    <tr>
                        <td>
                            <% if (d.first_name) { %>
                                <%= d.first_name %> <%= d.last_name %> (ID #<%= d.participant_id %>)
                            <% } else { %>
                                Participant #<%= d.participant_id %>
                            <% } %>
                        </td>
                        
                        <td>
                            <!-- 
                                FIX: Logic to mask invalid dates (Unix Epoch 1969/1970) 
                                If the year is too old, we show "No Date" placeholder.
                            -->
                            <% 
                                let dateStr = '<span style="color:#ccc; font-style:italic;">No Date</span>';
                                if (d.donation_date) {
                                    const dateObj = new Date(d.donation_date);
                                    // Check if valid AND newer than 1970
                                    if (!isNaN(dateObj) && dateObj.getFullYear() > 1970) {
                                        dateStr = dateObj.toLocaleDateString();
                                    }
                                }
                            %>
                            <%- dateStr %>
                        </td>
                        
                        <td>
                            $<%= Number(d.amount).toFixed(2) %>
                        </td>

                        <td class="table-actions">
                            <% if (isManager) { %>
                                <a href="/donations/<%= d.participant_id %>/<%= d.donation_no %>/edit">Edit</a>
                                
                                <form action="/donations/<%= d.participant_id %>/<%= d.donation_no %>/delete" 
                                      method="POST" 
                                      style="display:inline;"
                                      onsubmit="return confirm('Are you sure you want to delete this donation?');">
                                    
                                    <button class="btn btn-danger btn-small">
                                        Delete
                                    </button>
                                </form>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>

</div>