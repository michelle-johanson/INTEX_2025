<div class="page-container">

    <h1 class="page-title">Donations</h1>

    <table>
        <thead>
            <tr>
                <th>Participant</th>
                <th>Date</th>
                <th>Amount</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            <% donations.forEach(d => { %>
                <tr>
                    <td>
                        <% if (d.first_name) { %>
                            <%= d.first_name %> <%= d.last_name %> (ID #<%= d.participant_id %>)
                        <% } else { %>
                            Participant #<%= d.participant_id %>
                        <% } %>
                    </td>
                    
                    <td>
                        <%= new Date(d.donation_date).toLocaleDateString() %>
                    </td>
                    
                    <td>
                        $<%= Number(d.amount).toFixed(2) %>
                    </td>

                    <td class="table-actions">
                        <a href="/donations/<%= d.participant_id %>/<%= d.donation_no %>">View</a>

                        <% if (session && session.access_level === "manager") { %>
                            <a href="/donations/<%= d.participant_id %>/<%= d.donation_no %>/edit">Edit</a>
                            
                            <form action="/donations/<%= d.participant_id %>/<%= d.donation_no %>/delete" 
                                  method="POST" 
                                  style="display:inline;">
                                <button class="btn btn-danger btn-small" style="padding:0.2rem 0.6rem;">
                                    Delete
                                </button>
                            </form>
                        <% } %>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

</div>