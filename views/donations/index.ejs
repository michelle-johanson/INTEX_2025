<div class="page-container">

    <h1 class="page-title">Donations</h1>

    <table>
        <thead>
            <tr>
                <th>Participant</th>
                <th>Date</th>
                <th>Amount</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            <% donations.forEach(d=> {
                const participant = participants.find(p => p.ParticipantID === d.ParticipantID);
                %>
                <tr>
                    <td>
                        <% if (participant) { %>
                            <%= participant.FirstName %>
                                <%= participant.LastName %> (ID #<%= participant.ParticipantID %>)
                                        <% } else { %>
                                            â€”
                                            <% } %>
                    </td>
                    <td>
                        <%= d.DonationDate %>
                    </td>
                    <td>$<%= d.DonationAmount.toFixed ? d.DonationAmount.toFixed(2) : d.DonationAmount %>
                    </td>

                    <td class="table-actions">
                        <a href="/donations/<%= d.DonationID %>">View</a>

                        <% if (session && session.access_level==="manager" ) { %>
                            <a href="/donations/<%= d.DonationID %>/edit">Edit</a>
                            <form action="/donations/<%= d.DonationID %>/delete" method="POST" style="display:inline;">
                                <button class="btn btn-danger btn-small" style="padding:0.2rem 0.6rem;">
                                    Delete
                                </button>
                            </form>
                            <% } %>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

</div>