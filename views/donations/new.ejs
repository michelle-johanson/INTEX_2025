<div class="page-container">

    <h1 class="page-title">Make a Donation</h1>
    <p class="page-subtitle">
        Support Ella Rises by making a one-time donation. You can optionally
        designate your gift to support a specific participant.
    </p>

    <form action="/donations/new" method="POST" class="form">

        <label for="ParticipantID">Participant (optional)</label>
        <select id="ParticipantID" name="ParticipantID">
            <option value="">No specific participant</option>
            <% participants.forEach(p=> { %>
                <option value="<%= p.ParticipantID %>">
                    <%= p.FirstName %>
                        <%= p.LastName %> (ID #<%= p.ParticipantID %>)
                </option>
                <% }) %>
        </select>

        <label for="DonationDate">Donation Date</label>
        <input id="DonationDate" type="date" name="DonationDate" required />

        <label for="DonationAmount">Donation Amount (USD)</label>
        <input id="DonationAmount" type="number" name="DonationAmount" min="1" step="0.01" required />

        <button class="btn-submit">Submit Donation</button>
    </form>

</div>