<!-- HERO (FULL-WIDTH) -->
<section class="hero-full">
    <div class="container-inner">
        <h1 class="hero-title">Empowering the Rising Generation</h1>

        <p class="hero-text">
            Through STEAM workshops, mentoring, and leadership opportunities,
            Ella Rises helps young women build confidence, embrace their heritage,
            and discover their potential.
        </p>

        <a href="/donations/new" class="btn btn-primary btn-large hero-cta">
            Support the Mission
        </a>
    </div>
</section>


<!-- IMPACT (FULL-WIDTH) -->
<section class="impact-full">
    <div class="container-inner">
        <h2 class="section-title">Our Impact</h2>
        <p class="section-description">
            Ella Rises measures milestones, event satisfaction, and long-term STEAM outcomes
            to understand and improve program effectiveness.
        </p>

        <div class="impact-grid">
            <div class="impact-card">
                <h3>Milestones</h3>
                <p>Tracking structured achievements for long-term student growth.</p>
            </div>

            <div class="impact-card">
                <h3>Workshops</h3>
                <p>Hands-on STEAM experiences that build confidence and engagement.</p>
            </div>

            <div class="impact-card">
                <h3>Mentoring</h3>
                <p>Connecting young women with role models from BYU & UVU.</p>
            </div>
        </div>

        <% if (session && session.isLoggedIn) { %>
            <a href="/dashboard" class="btn btn-secondary btn-large mt-3">View Dashboard</a>
        <% } %>
    </div>
</section>


<!-- DONATE BANNER (FULL-WIDTH) -->
<section class="donate-full">
    <div class="container-inner">
        <h2>Your Support Changes Lives</h2>
        <p>
            Help us expand Ella Rises programs and empower even more future leaders.
        </p>

        <a href="/donations/new" class="btn btn-primary btn-large">Donate Today</a>
    </div>
</section>

<footer class="mt-5 text-center">

    <span id="teapot-trigger" style="cursor: pointer; font-size: 20px;" title="Click me for a surprise">
        ðŸ«–
    </span>

    <% if (session && session.isLoggedIn) { %>
        <div class="alert alert-info mt-3 d-inline-block">

            Logged in as:
            <strong>
                <%= session.username %>
            </strong>

            <% if (session.access_level==="admin" ) { %>
                <span class="badge bg-danger ms-2">Admin</span>
                <% } else { %>
                    <span class="badge bg-secondary ms-2">Participant</span>
                    <% } %>

        </div>
        <% } %>

</footer>



<script>
document.getElementById('teapot-trigger').addEventListener('click', () => {
  // 1. Make a request to your new backend route
  fetch('/teapot')
    .then(response => {
      // 2. Log it to the console so you can see it working via code as well
      console.log(`Status Code received: ${response.status}`);
      console.log(`Status Text: ${response.statusText}`);
      
      // Optional: Alert the user or play a sound
      if (response.status === 418) {
        console.log("Easter egg found!");
      }
    })
    .catch(error => console.error('Error fetching the teapot:', error));
});
</script>