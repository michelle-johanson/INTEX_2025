<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>
        <%= title || "Ella Rises - Empowering Young Women" %>
    </title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Import Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Bootstrap Styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/styles.css" />
</head>

<body>
    <div class="page-wrapper">

        <%- include('partials/navbar') %>

        <main class="page-content">
            <%- body %>
        </main>

        <%- include('partials/footer') %>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const teapots = document.querySelectorAll("[data-teapot-trigger]");
            if (!teapots.length) {
                console.log("‚ùå No teapot element found");
                return;
            }

            console.log("‚úÖ Teapot script loaded, listener attached to", teapots.length, "element(s)");

            teapots.forEach((teapot) => {
                teapot.addEventListener("click", (event) => {
                    event.preventDefault();

                    console.log("ü´ñ Teapot clicked ‚Äî sending fetch to /teapot...");

                    fetch('/teapot')
                        .then(response => {
                            console.log(`Status Code received: ${response.status}`);
                            console.log(`Status Text: ${response.statusText}`);

                            if (response.status === 418) {
                                console.log("‚ú® Easter egg found ‚Äî I'm a teapot!");
                            }
                        })
                        .catch(error => console.error('‚ùå Error fetching /teapot:', error));
                });
            });
        });
    </script>

</body>

</html>
