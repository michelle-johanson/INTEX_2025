<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>
        <%= title || "Ella Rises - Empowering Young Women" %>
    </title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Your styles AFTER Bootstrap -->
    <link rel="stylesheet" href="/css/styles.css" />
</head>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const hamburger = document.getElementById("hamburger");
        const mobileMenu = document.getElementById("mobileMenu");

        hamburger.addEventListener("click", () => {
            hamburger.classList.toggle("active");
            mobileMenu.classList.toggle("open");
        });

        document.querySelectorAll(".mobile-toggle").forEach(toggle => {
            toggle.addEventListener("click", e => {
                e.preventDefault();
                const parent = toggle.closest(".dropdown");
                parent.classList.toggle("open");
            });
        });
    });
</script>

<body class="page">
    <!-- Shared navbar on every page -->
    <%- include("navbar") %>

    <!-- Page-specific content gets injected here -->
    <main class="page-container">
        <%- body %>
    </main>

    <!-- Bootstrap JS bundle (enables dropdowns) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>