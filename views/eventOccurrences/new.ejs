<div class="container mt-4">
    <h1>Schedule New Event Occurrence</h1>

    <form action="/eventOccurrences/new" method="POST" class="mt-3">

        <!-- EVENT SELECTION -->
        <label for="EventID" class="form-label">Event</label>
        <select id="EventID" name="EventID" class="form-select" required>
            <option value="" disabled selected>Select an event…</option>
            <% events.forEach(e=> { %>
                <option value="<%= e.event_id %>">
                    <%= e.name %> — <%= e.event_type %>
                </option>
                <% }) %>
        </select>

        <!-- START DATETIME -->
        <label class="form-label mt-3">Start Date & Time</label>
        <input type="datetime-local" name="StartsAt" class="form-control" required>

        <!-- END DATETIME -->
        <label class="form-label mt-3">End Date & Time</label>
        <input type="datetime-local" name="EndsAt" class="form-control">

        <!-- LOCATION -->
        <label class="form-label mt-3">Location</label>
        <input type="text" name="Location" class="form-control" required>

        <!-- CAPACITY -->
        <label class="form-label mt-3">Capacity</label>
        <input type="number" min="1" name="Capacity" class="form-control">

        <!-- REGISTRATION DEADLINE -->
        <label class="form-label mt-3">Registration Deadline</label>
        <input type="date" name="RegDeadline" class="form-control">

        <!-- BUTTONS -->
        <div class="d-flex gap-3 mt-4">
            <button class="btn btn-primary">Create Occurrence</button>
            <a href="/eventOccurrences" class="btn btn-secondary">Cancel</a>
        </div>

    </form>
</div>