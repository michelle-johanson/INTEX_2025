<h1>Edit Event Occurrence</h1>

<form action="/eventOccurrences/<%= occurrence.id %>/edit" method="POST" class="form">

    <label>Event Name</label>
    <input type="text" name="event_name" value="<%= occurrence.event_name %>" required>

    <label>Start</label>
    <input type="datetime-local" name="start" value="<%= occurrence.start %>" required>

    <label>End</label>
    <input type="datetime-local" name="end" value="<%= occurrence.end %>" required>

    <label>Location</label>
    <input type="text" name="location" value="<%= occurrence.location %>" required>

    <label>Capacity</label>
    <input type="number" name="capacity" value="<%= occurrence.capacity %>" required>

    <label>Registration Deadline</label>
    <input type="date" name="registration_deadline" value="<%= occurrence.registration_deadline %>" required>

    <button class="btn btn-primary btn-submit mt-3">Save Changes</button>
</form>
