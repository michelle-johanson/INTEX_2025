<div class="page-container">
    <h1 class="page-title">Scheduled Events</h1>

    <% 
        // 1. ROBUST MANAGER CHECK
        const userRole = (session.role || (session.user && session.user.role) || "").toLowerCase();
        const isManager = userRole === "manager" || userRole === "admin"; 
    %>

    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem; flex-wrap: wrap; gap: 1rem;">
        
        <% if (isManager) { %>
            <a href="/eventOccurrences/new" class="btn btn-primary btn-small">
                + Schedule New Occurrence
            </a>
        <% } else { %>
            <div></div>
        <% } %>

        <form action="/eventOccurrences" method="GET" style="display: flex; gap: 0.5rem; align-items: center;">
            <input type="text" 
                   name="search" 
                   placeholder="Search event, type, or location..." 
                   value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>"
                   style="padding: 0.4rem; border: 1px solid #ccc; border-radius: 4px; width: 250px;"
            >
            <button type="submit" class="btn btn-secondary btn-small">Search</button>
            
            <% if (typeof searchTerm !== 'undefined' && searchTerm) { %>
                <a href="/eventOccurrences" style="color: #666; text-decoration: none; font-size: 0.9rem;">Clear</a>
            <% } %>
        </form>
    </div>

    <% if (occurrences.length === 0) { %>
        <p>No scheduled events found matching your search.</p>
    <% } else { %>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Event</th>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Location</th>
                    <th>Capacity</th>
                    <th>Actions</th> </tr>
            </thead>

            <tbody>
                <% occurrences.forEach(o => { %>
                    <tr>
                        <td><strong><%= o.event_name %></strong></td>
                        
                        <td><%= new Date(o.starts_at).toLocaleString() %></td>
                        
                        <td><%= o.event_type %></td>
                        <td><%= o.location %></td>
                        <td><%= o.capacity %></td>
                        
                        <td class="table-actions d-flex">
                            <a href="/eventOccurrences/<%= o.event_occurrence_id %>" class="btn btn-secondary btn-small">
                                View
                            </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>
</div>