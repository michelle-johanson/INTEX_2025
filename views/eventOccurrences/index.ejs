<div class="container mt-4">
    <h1>Upcoming Events</h1>

    <% if (session && session.access_level === "admin") { %>
        <a href="/eventOccurrences/new" class="btn btn-primary mt-3 mb-3">
            + Schedule New Occurrence
        </a>
    <% } %>

    <table class="table table-hover mt-3">
        <thead>
            <tr>
                <th>Event</th>
                <th>Date</th>
                <th>Type</th>
                <th>Location</th>
                <th>Capacity</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            <% occurrences.forEach(o => { %>
                <tr>
                    <td><%= o.event_name %></td>
                    <td><%= new Date(o.start_datetime).toLocaleString() %></td>
                    <td><%= o.event_type %></td>
                    <td><%= o.location %></td>
                    <td><%= o.capacity %></td>
                    <td>
                        <a href="/eventOccurrences/<%= o.occurrence_id %>" 
                           class="btn btn-sm btn-outline-primary">
                            View
                        </a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
