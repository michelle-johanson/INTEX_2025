<div class="page-container">
    <h1 class="page-title">Scheduled Events</h1>

    <% 
        // 1. ROBUST MANAGER CHECK
        // Checks session.role OR session.user.role to ensure buttons appear
        const userRole = (session.role || (session.user && session.user.role) || "").toLowerCase();
        const isManager = userRole === "manager" || userRole === "admin"; 
    %>

    <!-- #TO-DO: create class for flex container with justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem; -->
    <div class="d-flex mb-3">
        
        <% if (isManager) { %>
            <a href="/eventOccurrences/new" class="btn btn-primary btn-small">
                + Schedule New Occurrence
            </a>
        <% } else { %>
            <div></div>
        <% } %>

        <!-- #TO-DO: create class for flex container with gap: 0.5rem; align-items: center; -->
        <form action="/eventOccurrences" method="GET" class="d-flex">
            <!-- #TO-DO: create class for search input with padding: 0.4rem; border: 1px solid #ccc; border-radius: 4px; width: 250px; -->
            <input type="text" 
                   name="search" 
                   placeholder="Search event, type, or location..." 
                   value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>"
            >
            <button type="submit" class="btn btn-secondary btn-small">Search</button>
            
            <% if (typeof searchTerm !== 'undefined' && searchTerm) { %>
                <!-- #TO-DO: create class for small link text with font-size: 0.9rem; -->
                <a href="/eventOccurrences">Clear</a>
            <% } %>
        </form>
    </div>

    <% if (occurrences.length === 0) { %>
        <p>No scheduled events found matching your search.</p>
    <% } else { %>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Event</th>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Location</th>
                    <th>Capacity</th>
                    <th>Actions</th> </tr>
            </thead>

            <tbody>
                <% occurrences.forEach(o => { %>
                    <tr>
                        <td><strong><%= o.event_name %></strong></td>
                        
                        <td><%= new Date(o.starts_at).toLocaleString() %></td>
                        
                        <td><%= o.event_type %></td>
                        <td><%= o.location %></td>
                        <td><%= o.capacity %></td>
                        
                        <!-- #TO-DO: create class for table-actions with display: flex; gap: 5px; -->
                        <td class="table-actions d-flex">
                            <a href="/eventOccurrences/<%= o.event_occurrence_id %>" class="btn btn-secondary btn-small">
                                View
                            </a>

                            <% if (isManager) { %>
                                <!-- #TO-DO: create class for btn-warning with background-color: #f0ad4e; border-color: #eea236; -->
                                <a href="/eventOccurrences/<%= o.event_occurrence_id %>/edit" class="btn btn-primary btn-small">
                                    Edit
                                </a>

                                <!-- #TO-DO: create class for inline form display -->
                                <form action="/eventOccurrences/<%= o.event_occurrence_id %>/delete" method="POST">
                                    <!-- #TO-DO: create class for btn-danger with background-color: #d9534f; border-color: #d43f3a; color: white; -->
                                    <button type="submit" class="btn btn-secondary btn-small" onclick="return confirm('Are you sure you want to delete this scheduled event?');">
                                        Delete
                                    </button>
                                </form>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>
</div>