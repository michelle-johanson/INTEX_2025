<!-- BACK BUTTON -->
<a href="/eventOccurrences" class="btn btn-secondary mb-4">
    ‚Üê Back to Event Occurrences
</a>

<!-- ==========================
     TOP SUMMARY CARD
========================== -->
<div class="detail-card mb-4 top-info-card">

    <div class="top-card-content">

        <!-- LEFT TEXT COLUMN -->
        <div class="top-info-left">

            <h1 class="detail-title">
                <%= occurrence.event_name ? occurrence.event_name : 'Event #' + occurrence.event_id %>
            </h1>

            <div class="detail-row">
                <span class="detail-label">Start</span>
                <span class="detail-value">
                    <%= new Date(occurrence.starts_at).toLocaleString() %>
                </span>
            </div>

            <div class="detail-row">
                <span class="detail-label">End</span>
                <span class="detail-value">
                    <%= new Date(occurrence.ends_at).toLocaleString() %>
                </span>
            </div>

            <div class="detail-row">
                <span class="detail-label">Location</span>
                <span class="detail-value">
                    <%= occurrence.location %>
                </span>
            </div>

            <div class="detail-row">
                <span class="detail-label">Capacity</span>
                <span class="detail-value">
                    <%= occurrence.capacity %>
                </span>
            </div>

            <div class="detail-row">
                <span class="detail-label">Registration Deadline</span>
                <span class="detail-value">
                    <%= occurrence.registration_deadline ? new
                        Date(occurrence.registration_deadline).toLocaleDateString() : 'None' %>
                </span>
            </div>

            <div class="detail-row">
                <span class="detail-label">Description</span>
                <span class="detail-value">
                    <%= occurrence.event_description || "No description available." %>
                </span>
            </div>

        </div>

        <!-- RIGHT BUTTON COLUMN -->
        <% if (session && session.access_level==="manager" ) { %>
            <div class="top-info-actions">
                <a href="/eventOccurrences/<%= occurrence.event_occurrence_id %>/edit"
                    class="btn btn-secondary btn-large">
                    Edit Info
                </a>

                <form action="/eventOccurrences/<%= occurrence.event_occurrence_id %>/delete" method="POST"
                    onsubmit="return confirm('Are you sure you want to delete this occurrence?');">
                    <button class="btn btn-danger btn-large">Delete Info</button>
                </form>
            </div>
            <% } %>

    </div>
</div>


<!-- ==========================
     DETAIL TABLE CARD
========================== -->
<div class="detail-card">

    <h2 class="detail-subtitle">Event Details</h2>

    <table class="detail-table">

        <tr>
            <th>Event Name</th>
            <td>
                <%= occurrence.event_name || "Unknown Event" %>
            </td>
        </tr>

        <tr>
            <th>Start</th>
            <td>
                <%= new Date(occurrence.starts_at).toLocaleString() %>
            </td>
        </tr>

        <tr>
            <th>End</th>
            <td>
                <%= new Date(occurrence.ends_at).toLocaleString() %>
            </td>
        </tr>

        <tr>
            <th>Location</th>
            <td>
                <%= occurrence.location %>
            </td>
        </tr>

        <tr>
            <th>Capacity</th>
            <td>
                <%= occurrence.capacity %>
            </td>
        </tr>

        <tr>
            <th>Registration Deadline</th>
            <td>
                <%= occurrence.registration_deadline ? new Date(occurrence.registration_deadline).toLocaleDateString()
                    : 'None' %>
            </td>
        </tr>

        <tr>
            <th>Description</th>
            <td>
                <%= occurrence.event_description || "No description available." %>
            </td>
        </tr>
    </table>

</div>