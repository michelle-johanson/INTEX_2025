<!-- BACK BUTTON -->
<a href="/eventOccurrences" class="btn btn-secondary mb-4">
    ‚Üê Back to Event Occurrences
</a>

<!-- ==========================
     TOP SUMMARY CARD
========================== -->
<div class="detail-card mb-4 top-info-card">

    <div class="top-card-content">

        <!-- LEFT TEXT COLUMN -->
        <div class="top-info-left">
            <h1 class="detail-title"><%= event.EventName %></h1>

            <p><strong>Location:</strong> <%= occurrence.EventLocation %></p>
            <p><strong>Start:</strong> <%= occurrence.EventDateTimeStart %></p>
            <p><strong>End:</strong> <%= occurrence.EventDateTimeEnd %></p>
        </div>

        <!-- RIGHT BUTTON COLUMN -->
        <% if (session && session.access_level === "manager") { %>
        <div class="top-info-actions">
            <a href="/eventOccurrences/<%= occurrence.EventOccurrenceID %>/edit" 
               class="btn btn-secondary btn-large">
                Edit Info
            </a>

            <form action="/eventOccurrences/<%= occurrence.EventOccurrenceID %>/delete"
                  method="POST"
                  onsubmit="return confirm('Are you sure you want to delete this occurrence?');">
                <button class="btn btn-danger btn-large">Delete Info</button>
            </form>
        </div>
        <% } %>

    </div>
</div>


<!-- ==========================
     DETAIL TABLE CARD
========================== -->
<div class="detail-card">

    <h2 class="detail-subtitle">Event Details</h2>

    <table class="detail-table">
        <tr>
            <th>Event Name</th>
            <td><%= event.EventName %></td>
        </tr>

        <tr>
            <th>Start</th>
            <td><%= occurrence.EventDateTimeStart %></td>
        </tr>

        <tr>
            <th>End</th>
            <td><%= occurrence.EventDateTimeEnd %></td>
        </tr>

        <tr>
            <th>Location</th>
            <td><%= occurrence.EventLocation %></td>
        </tr>

        <tr>
            <th>Capacity</th>
            <td><%= occurrence.EventCapacity %></td>
        </tr>

        <tr>
            <th>Registration Deadline</th>
            <td><%= occurrence.EventRegistrationDeadline %></td>
        </tr>
    </table>

</div>
