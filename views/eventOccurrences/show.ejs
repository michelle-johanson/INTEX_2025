<div class="page-container">

    <h1 class="page-title">Event Occurrence Details</h1>

    <div class="detail-card">

        <div class="detail-row">
            <span class="detail-label">Event</span>
            <span class="detail-value">
                <% if (event) { %>
                    <%= event.EventName %>
                <% } else { %>
                    Event ID #<%= occurrence.EventID %>
                <% } %>
            </span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Start</span>
            <span class="detail-value"><%= occurrence.EventDateTimeStart %></span>
        </div>

        <div class="detail-row">
            <span class="detail-label">End</span>
            <span class="detail-value"><%= occurrence.EventDateTimeEnd %></span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Location</span>
            <span class="detail-value"><%= occurrence.EventLocation %></span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Capacity</span>
            <span class="detail-value"><%= occurrence.EventCapacity %></span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Registration Deadline</span>
            <span class="detail-value"><%= occurrence.EventRegistrationDeadline %></span>
        </div>

        <% if (session && session.access_level === "manager") { %>
            <div class="detail-actions">
                <a href="/eventOccurrences/<%= occurrence.EventOccurrenceID %>/edit">Edit</a>
            </div>
        <% } %>

    </div>

</div>
