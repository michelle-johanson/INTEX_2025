<div class="page-container">

    <% 
        // 1. Get the user object (it might be session.user or just session)
        const user = session.user || session; 
        
        // 2. Get the role (check 'role' or 'access_level')
        const rawRole = user.role || user.access_level || "";
        
        // 3. Normalize to lowercase for comparison
        const userRole = rawRole.toLowerCase();

        // 4. Final Boolean Check
        const isManager = userRole === "manager" || userRole === "admin"; 
    %>

    <!-- #TO-DO: create class for flex container with justify-content: space-between; align-items: flex-start; -->
    <div class="d-flex mb-4">
        <div>
            <h1 class="page-title mb-1"><%= event.name %></h1>
            <!-- #TO-DO: create class for text-muted with font-size: 1.1rem; -->
            <p class="text-muted">
                Type: <strong><%= event.type %></strong>
            </p>
            <% if (event.description) { %>
                <!-- #TO-DO: create class for description text with max-width: 700px; line-height: 1.6; -->
                <p><%= event.description %></p>
            <% } %>
        </div>

        <% if (isManager) { %>
            <!-- #TO-DO: create class for flex container with gap: 0.5rem; flex-direction: column; align-items: flex-end; -->
            <div class="d-flex">
                <a href="/events/<%= event.event_id %>/edit" class="btn btn-warning btn-small">
                    Edit Event Info
                </a>
                
                <form action="/events/<%= event.event_id %>/delete" 
                      method="POST" 
                      onsubmit="return confirm('Are you sure? This will fail if there are scheduled occurrences attached to this event.');">
                    <button class="btn btn-danger btn-sm">Delete Event Type</button>
                </form>
            </div>
        <% } %>
    </div>

    <!-- #TO-DO: create class for horizontal rule with margin: 2rem 0; border: 0; border-top: 1px solid #ddd; -->
    <hr class="my-4">

    <!-- #TO-DO: create class for flex container with justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem; -->
    <div class="d-flex mb-3">
        <h3>Scheduled Occurrences</h3>

        <!-- #TO-DO: create class for flex container with gap: 1rem; align-items: center; -->
        <div class="d-flex">
            <!-- #TO-DO: create class for flex container with gap: 0.5rem; -->
            <form action="/events/<%= event.event_id %>" method="GET" class="d-flex">
                <!-- #TO-DO: create class for search input with padding: 0.4rem; border: 1px solid #ccc; border-radius: 4px; -->
                <input type="text" 
                       name="search" 
                       placeholder="Search location..." 
                       value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>"
                >
                <button type="submit" class="btn btn-secondary btn-small">Search</button>
                <% if (typeof searchTerm !== 'undefined' && searchTerm) { %>
                    <!-- #TO-DO: create class for small link text with font-size: 0.9rem; -->
                    <a href="/events/<%= event.event_id %>">Clear</a>
                <% } %>
            </form>

            <% if (isManager) { %>
                <a href="/eventOccurrences/new?event_id=<%= event.event_id %>" class="btn btn-primary btn-small">
                    + Schedule New
                </a>
            <% } %>
        </div>
    </div>

    <% if (occurrences.length === 0) { %>
        <!-- #TO-DO: create class for empty state with background: #f8f9fa; padding: 2rem; text-align: center; border-radius: 8px; -->
        <div class="text-center">
            <p class="text-muted">No occurrences scheduled for this event type.</p>
        </div>
    <% } else { %>
        <table class="table">
            <thead>
                <tr>
                    <th>Date & Time</th>
                    <th>Location</th>
                    <th>Capacity</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% occurrences.forEach(o => { %>
                    <tr>
                        <td><%= new Date(o.starts_at).toLocaleString() %></td>
                        
                        <td><%= o.location %></td>
                        
                        <td><%= o.capacity %></td>
                        
                        <!-- #TO-DO: create class for table-actions with display: flex; gap: 5px; -->
                        <td class="table-actions d-flex">
                            
                            <a href="/eventOccurrences/<%= o.event_occurrence_id %>" class="btn btn-secondary btn-small">
                                View
                            </a>

                            <% if (isManager) { %>
                                <!-- #TO-DO: create class for btn-info with background-color: #17a2b8; border-color: #17a2b8; color: white; -->
                                <a href="/registrations/event/<%= o.event_occurrence_id %>" 
                                   class="btn btn-info btn-small">
                                   Registrants
                                </a>

                                <!-- #TO-DO: create class for btn-warning with background-color: #f0ad4e; border-color: #eea236; color: white; -->
                                <a href="/eventOccurrences/<%= o.event_occurrence_id %>/edit" 
                                   class="btn btn-warning btn-small">
                                   Edit
                                </a>

                                <!-- #TO-DO: create class for inline form display -->
                                <form action="/eventOccurrences/<%= o.event_occurrence_id %>/delete" method="POST">
                                    <!-- #TO-DO: create class for btn-danger with background-color: #d9534f; border-color: #d43f3a; color: white; -->
                                    <button type="submit" 
                                            class="btn btn-danger btn-small"
                                            onclick="return confirm('Are you sure you want to delete this scheduled occurrence?');">
                                        Delete
                                    </button>
                                </form>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>

</div>