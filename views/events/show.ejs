<div class="page-container">

    <h1 class="page-title">Event Template Details</h1>

    <div class="detail-card">
        <div class="detail-row">
            <span class="detail-label">Name</span>
            <span class="detail-value"><%= event.name %></span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Type</span>
            <span class="detail-value"><%= event.type %></span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Recurrence</span>
            <span class="detail-value"><%= event.recurrence_pattern %></span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Default Capacity</span>
            <span class="detail-value"><%= event.default_capacity %></span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Description</span>
            <span class="detail-value"><%= event.description %></span>
        </div>

        <% if (session && session.access_level === "manager") { %>
            <div class="detail-actions">
                <a href="/events/<%= event.event_id %>/edit">Edit</a>
            </div>
        <% } %>
    </div>

</div>