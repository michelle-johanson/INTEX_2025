<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>
        <%= title %>
    </title>

    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>

    <%- include("../partials/navbar") %>

        <div class="container mt-4">

            <h1>
                <%= event.name %>
            </h1>

            <p><strong>Date:</strong>
                <%= event.date %>
            </p>
            <p><strong>Location:</strong>
                <%= event.location %>
            </p>
            <p><strong>Type:</strong>
                <%= event.event_type %>
            </p>

            <% if (session.access_level==="admin" ) { %>
                <a href="/events/<%= event.id %>/edit" class="btn btn-warning">Edit</a>

                <form action="/events/<%= event.id %>/delete" method="POST" style="display:inline;">
                    <button class="btn btn-danger">Delete</button>
                </form>
                <% } %>

                    <br><br>
                    <a href="/events" class="btn btn-secondary">Back</a>

        </div>

</body>

</html>