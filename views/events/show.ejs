<div class="page-container">

    <h1 class="page-title">Event Template Details</h1>

    <div class="detail-card">
        <div class="detail-row">
            <span class="detail-label">Name</span>
            <span class="detail-value"><%= event.EventName %></span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Type</span>
            <span class="detail-value"><%= event.EventType %></span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Recurrence</span>
            <span class="detail-value"><%= event.EventRecurrencePattern %></span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Default Capacity</span>
            <span class="detail-value"><%= event.EventDefaultCapacity %></span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Description</span>
            <span class="detail-value"><%= event.EventDescription %></span>
        </div>

        <% if (session && session.access_level === "manager") { %>
            <div class="detail-actions">
                <a href="/events/<%= event.EventID %>/edit">Edit</a>
            </div>
        <% } %>
    </div>

</div>
