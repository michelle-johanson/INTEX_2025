<section class="container">

    <!-- TOP INFO CARD -->
    <div class="card card--info">

        <div class="flex" style="justify-content: space-between; align-items: flex-start;">

            <!-- LEFT: Event Title & Info -->
            <div>
                <h1>
                    <%= event.name %>
                </h1>

                <p><strong>Type:</strong>
                    <%= event.type %>
                </p>

                <% if (event.description) { %>
                    <p>
                        <%= event.description %>
                    </p>
                    <% } %>
            </div>

            <!-- RIGHT: Action Buttons -->
            <div class="flex-col" style="gap: 0.5rem; align-items: flex-end;">
                <a href="/events/<%= event.event_id %>/edit" class="btn btn--secondary btn--lg">
                    Edit Event Info
                </a>

                <form action="/events/<%= event.event_id %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn--red btn--lg">
                        Delete Event Type
                    </button>
                </form>
            </div>
        </div>

    </div>
</section>

<section class="page-container">

    <% 
        const s = session || {};
        const user = s.user || s;
        const rawRole = (user.access_level || user.role || "").toLowerCase();
        const isManager = ["manager", "admin"].includes(rawRole);
    %>

    <!-- EVENT INFO CARD -->
    <div class="page-card-detail">

        <div class="page-card-header">
            <h2><%= event.name %></h2>

            <% if (isManager) { %>
            <div class="page-card-actions">
                <a href="/events/<%= event.event_id %>/edit" 
                   class="btn btn-warning btn-pill">
                    Edit Event Info
                </a>

                <form action="/events/<%= event.event_id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger btn-pill">
                        Delete Event Type
                    </button>
                </form>
            </div>
            <% } %>
        </div>

        <p class="text-muted">
            Type: <strong><%= event.type %></strong>
        </p>

        <p><%= event.description %></p>

    </div>


    <!-- SCHEDULED OCCURRENCES -->
    <div class="page-card-wide" style="margin-top: 2rem;">

        <div class="page-card-header">
            <h2>Scheduled Occurrences</h2>

            <div class="page-card-actions">

                <!-- DO NOT TOUCH SEARCH BAR — RESTORED EXACTLY -->
                <form action="/events/<%= event.event_id %>" method="GET" class="search-bar">
                    <input 
                        type="text" 
                        name="location" 
                        placeholder="Search location…" 
                        value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>"
                        class="search-input"
                    >
                    <button type="submit" class="btn btn-secondary btn-small btn-search">Search</button>
                </form>
                <!-- end search bar -->

                <% if (isManager) { %>
                <a href="/eventOccurrences/new/<%= event.event_id %>" class="btn btn-primary btn-pill">
                    + Schedule New
                </a>
                <% } %>

            </div>
        </div>
    </div>

        <!-- TABLE -->
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Date & Time</th>
                    <th>Location</th>
                    <th>Capacity</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                <% occurrences.forEach(o => { %>
                    <tr>
                        <td><%= o.starts_at %></td>
                        <td><%= o.location %></td>
                        <td><%= o.capacity %></td>
                        <td>
                            <a href="/eventOccurrences/<%= o.event_occurrence_id %>" 
                                class="btn btn-table-details btn-small">
                                View
                            </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

</section>
