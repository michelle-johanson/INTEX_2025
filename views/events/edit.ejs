<div class="page-container">

    <h1 class="page-title">Edit Event Template</h1>

    <form action="/events/<%= event.EventID %>/edit" method="POST" class="form">

        <label for="EventName">Event Name</label>
        <input id="EventName"
               type="text"
               name="EventName"
               value="<%= event.EventName %>"
               required />

        <label for="EventType">Event Type</label>
        <input id="EventType"
               type="text"
               name="EventType"
               value="<%= event.EventType %>" />

        <label for="EventRecurrencePattern">Recurrence Pattern</label>
        <input id="EventRecurrencePattern"
               type="text"
               name="EventRecurrencePattern"
               value="<%= event.EventRecurrencePattern %>" />

        <label for="EventDescription">Description</label>
        <textarea id="EventDescription" name="EventDescription" rows="3"><%= event.EventDescription %></textarea>

        <label for="EventDefaultCapacity">Default Capacity</label>
        <input id="EventDefaultCapacity"
               type="number"
               name="EventDefaultCapacity"
               value="<%= event.EventDefaultCapacity %>"
               min="1" />

        <button class="btn-submit">Save Changes</button>
    </form>

</div>
