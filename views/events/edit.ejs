<div class="container mt-4">
       <h1>Edit Event Type</h1>

       <form action="/events/<%= event.event_id %>/edit" method="POST" class="mt-3">

              <label for="EventName" class="form-label">Event Name</label>
              <input id="EventName" type="text" name="EventName" class="form-control" 
                     value="<%= event.name %>"
                     required />

              <label for="EventType" class="form-label mt-3">Event Type</label>
              <input id="EventType" type="text" name="EventType" class="form-control" 
                     value="<%= event.type || '' %>" />

              <label for="EventRecurrencePattern" class="form-label mt-3">Recurrence Pattern</label>
              <input id="EventRecurrencePattern" type="text" name="EventRecurrencePattern" class="form-control"
                     value="<%= event.recurrence_pattern || '' %>" />

              <label for="EventDescription" class="form-label mt-3">Description</label>
              <textarea id="EventDescription" name="EventDescription" class="form-control"
                     rows="3"><%= event.description || '' %></textarea>

              <label for="EventDefaultCapacity" class="form-label mt-3">Default Capacity</label>
              <input id="EventDefaultCapacity" type="number" name="EventDefaultCapacity" class="form-control"
                     value="<%= event.default_capacity %>" min="1" />

              <div class="d-flex gap-3 mt-4">
                     <button class="btn btn-primary">Save Changes</button>
                     <a href="/events/<%= event.event_id %>" class="btn btn-secondary">Cancel</a>
              </div>

       </form>
</div>