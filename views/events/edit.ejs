<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>
        <%= title %>
    </title>

    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

    <%- include("../partials/navbar") %>

        <div class="container mt-4" style="max-width: 600px;">

            <h1>Edit Event</h1>

            <form action="/events/<%= event.id %>/edit" method="POST">

                <div class="mb-3">
                    <label>Event Name</label>
                    <input name="name" class="form-control" value="<%= event.name %>" required>
                </div>

                <div class="mb-3">
                    <label>Date</label>
                    <input name="date" type="date" class="form-control" value="<%= event.date %>" required>
                </div>

                <div class="mb-3">
                    <label>Location</label>
                    <input name="location" class="form-control" value="<%= event.location %>">
                </div>

                <div class="mb-3">
                    <label>Event Type</label>
                    <input name="event_type" class="form-control" value="<%= event.event_type %>">
                </div>

                <button class="btn btn-success">Save Changes</button>
            </form>

            <br>
            <a href="/events" class="btn btn-secondary">Cancel</a>

        </div>

</body>

</html>