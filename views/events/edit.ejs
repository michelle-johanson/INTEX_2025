<div class="container mt-4">
       <h1>Edit Event Type</h1>

       <form action="/events/<%= event.event_id %>/edit" method="POST" class="mt-3">

              <label class="form-label">Event Name</label>
              <input type="text" name="EventName" class="form-control" value="<%= event.name %>" required />

              <label class="form-label mt-3">Event Type</label>
              <input type="text" name="EventType" class="form-control" value="<%= event.event_type %>" />

              <label class="form-label mt-3">Description</label>
              <textarea name="EventDescription" class="form-control" rows="3"><%= event.description %></textarea>

              <button class="btn btn-primary mt-3">Save Changes</button>
       </form>
</div>