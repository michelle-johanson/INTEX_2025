<div class="page-container">
       <div class="page-card-form">
              <h2>Edit Event Type</h2>

              <form action="/events/<%= event.event_id %>/edit" method="POST" class="form">

                     <label for="EventName">Event Name</label>
                     <input id="EventName" type="text" name="EventName" value="<%= event.name %>" required />

                     <label for="EventType">Event Type</label>
                     <input id="EventType" type="text" name="EventType" value="<%= event.type || '' %>" />

                     <label for="EventRecurrencePattern">Recurrence Pattern</label>
                     <input id="EventRecurrencePattern" type="text" name="EventRecurrencePattern"
                            value="<%= event.recurrence_pattern || '' %>" />

                     <label for="EventDescription">Description</label>
                     <textarea id="EventDescription" name="EventDescription"
                            rows="3"><%= event.description || '' %></textarea>

                     <label for="EventDefaultCapacity">Default Capacity</label>
                     <input id="EventDefaultCapacity" type="number" name="EventDefaultCapacity"
                            value="<%= event.default_capacity %>" min="1" />

                     <div class="btn-wrapper">
                            <button class="btn btn-primary btn-lg">Save Changes</button>
                            <a href="/events/<%= event.event_id %>" class="btn btn-secondary btn-lg">Cancel</a>
                     </div>

              </form>
       </div>
</div>