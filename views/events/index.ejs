<div class="page-container">

    <h1 class="page-title">Event Types</h1>

    <% 
        // Role check is now necessary here to display the 'Create New' button
        const user = session.user || session; 
        const rawRole = user.role || user.access_level || "";
        const isManager = rawRole.toLowerCase() === "manager" || rawRole.toLowerCase() === "admin"; 
    %>

    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem; flex-wrap: wrap; gap: 1rem;">
        
        <% if (isManager) { %>
            <a href="/events/new" class="btn btn-primary btn-small">
                + Create New Event Type
            </a>
        <% } else { %>
            <div></div>
        <% } %>

        <form action="/events" method="GET" style="display: flex; gap: 0.5rem; align-items: center;">
            <input type="text" 
                   name="search" 
                   placeholder="Search event name or type..." 
                   value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>" 
                   style="padding: 0.4rem; border: 1px solid #ccc; border-radius: 4px; width: 250px;"
            >
            <button type="submit" class="btn btn-secondary btn-small">Search</button>
            
            <% if (typeof searchTerm !== 'undefined' && searchTerm) { %>
                <a href="/events" style="color: #666; text-decoration: none; font-size: 0.9rem;">Clear</a>
            <% } %>
        </form>
    </div>

    <% if (events.length === 0) { %>
        <p>No event types found.</p>
    <% } else { %>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                <% events.forEach(e => { %>
                    <tr>
                        <td><%= e.name %></td>
                        <td><%= e.type %></td>
                        
                        <td class="table-actions">
                            <a href="/events/<%= e.event_id %>" class="btn btn-secondary btn-small">
                                View
                            </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>
</div>