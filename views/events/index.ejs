<div class="container mt-4">
    <h1 class="mb-3">Event Types</h1>

    <% if (session && session.access_level === "admin") { %>
        <a href="/events/new" class="btn btn-primary mb-3">+ Create New Event Type</a>
    <% } %>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            <% events.forEach(e => { %>
                <tr>
                    <td><%= e.name %></td>
                    <td><%= e.event_type %></td>
                    <td>
                        <a href="/events/<%= e.event_id %>" class="btn btn-sm btn-outline-primary">
                            View
                        </a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
