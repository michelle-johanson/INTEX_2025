<div class="page-container">

    <h1 class="page-title">Event Templates</h1>

    <% if (session && session.access_level === "manager") { %>
        <a href="/events/new" class="btn btn-primary btn-small mb-4">
            + Add Event Template
        </a>
    <% } %>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Recurrence</th>
                <th>Default Capacity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% events.forEach(e => { %>
                <tr>
                    <td><%= e.EventName %></td>
                    <td><%= e.EventType %></td>
                    <td><%= e.EventRecurrencePattern %></td>
                    <td><%= e.EventDefaultCapacity %></td>
                    <td class="table-actions">
                        <a href="/events/<%= e.EventID %>">View</a>

                        <% if (session && session.access_level === "manager") { %>
                            <a href="/events/<%= e.EventID %>/edit">Edit</a>
                            <form action="/events/<%= e.EventID %>/delete"
                                  method="POST"
                                  style="display:inline;">
                                <button class="btn btn-danger btn-small" style="padding:0.2rem 0.6rem;">
                                    Delete
                                </button>
                            </form>
                        <% } %>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

</div>
