<div class="page-container">

    <h1 class="page-title">Event Templates</h1>

    <% if (session && session.access_level === "manager") { %>
        <a href="/events/new" class="btn btn-primary btn-small mb-4">
            + Add Event Template
        </a>
    <% } %>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Recurrence</th>
                <th>Default Capacity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% events.forEach(e => { %>
                <tr>
                    <td><%= e.name %></td>
                    <td><%= e.type %></td>
                    
                    <td><%= e.recurrence_pattern %></td>
                    
                    <td><%= e.default_capacity %></td>

                    <td class="table-actions">
                        <a href="/events/<%= e.event_id %>">View</a>

                        <% if (session && session.access_level === "manager") { %>
                            <a href="/events/<%= e.event_id %>/edit">Edit</a>
                            
                            <form action="/events/<%= e.event_id %>/delete" 
                                  method="POST" 
                                  style="display:inline;">
                                <button class="btn btn-danger btn-small" style="padding:0.2rem 0.6rem;">
                                    Delete
                                </button>
                            </form>
                        <% } %>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

</div>