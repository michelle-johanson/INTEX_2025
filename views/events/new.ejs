<div class="page-container">
    <div class="page-card-wide">
        <h1 class="page-title">Create New Event Type</h1>

        <form action="/events/new" method="POST" class="form">

            <label for="EventName">Event Name (Required)</label>
            <input id="EventName" type="text" name="EventName" required />

            <label for="EventType">Event Type (e.g., Workshop, Mentoring)</label>
            <input id="EventType" type="text" name="EventType" required />

            <label for="EventRecurrencePattern">Recurrence Pattern (e.g., Weekly, Monthly)</label>
            <input id="EventRecurrencePattern" type="text" name="EventRecurrencePattern" />

            <label for="EventDescription">Description</label>
            <textarea id="EventDescription" name="EventDescription" rows="3"></textarea>

            <label for="EventDefaultCapacity">Default Capacity</label>
            <input id="EventDefaultCapacity" type="number" name="EventDefaultCapacity" min="1" required />

            <div class="form-actions">
                <button class="btn-submit">Create Event Type</button>
                <a href="/events">Cancel</a>
            </div>
        </form>
    </div>
</div>
