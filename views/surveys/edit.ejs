<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <%- include("../partials/navbar") %>

        <div class="container mt-4" style="max-width: 600px;">

            <h1>Edit Survey</h1>

            <form action="/surveys/<%= survey.id %>/edit" method="POST">

                <div class="mb-3">
                    <label>Participant</label>
                    <select name="participant_id" class="form-control">
                        <% participants.forEach(p=> { %>
                            <option value="<%= p.id %>" <%=p.id===survey.participant_id ? "selected" : "" %>>
                                <%= p.first_name %>
                                    <%= p.last_name %>
                            </option>
                            <% }) %>
                    </select>
                </div>

                <div class="mb-3">
                    <label>Event</label>
                    <select name="event_id" class="form-control">
                        <% events.forEach(e=> { %>
                            <option value="<%= e.id %>" <%=e.id===survey.event_id ? "selected" : "" %>>
                                <%= e.name %>
                            </option>
                            <% }) %>
                    </select>
                </div>

                <div class="mb-3">
                    <label>Rating (1â€“5)</label>
                    <input type="number" min="1" max="5" name="rating" value="<%= survey.rating %>"
                        class="form-control">
                </div>

                <div class="mb-3">
                    <label>Comments</label>
                    <textarea name="comments" class="form-control"><%= survey.comments %></textarea>
                </div>

                <div class="mb-3">
                    <label>Date Taken</label>
                    <input type="date" name="date_taken" class="form-control" value="<%= survey.date_taken %>">
                </div>

                <button class="btn btn-success">Save Changes</button>
            </form>

            <br>
            <a href="/surveys" class="btn btn-secondary">Cancel</a>
        </div>

</body>

</html>