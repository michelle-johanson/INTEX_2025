<div class="page-container">

    <h1 class="page-title">Edit Survey</h1>

    <form action="/surveys/<%= survey.EventOccurrenceID %>/<%= survey.ParticipantID %>/edit" method="POST" class="form">

        <!-- Participant + Occurrence stay fixed -->

        <label>Participant</label>
        <input type="text" disabled value="<%= participants.find(p => p.ParticipantID === survey.ParticipantID)?.FirstName %>
                      <%= participants.find(p => p.ParticipantID === survey.ParticipantID)?.LastName %>">

        <label>Event Occurrence</label>
        <input type="text" disabled
            value="<%= occurrences.find(o => o.EventOccurrenceID === survey.EventOccurrenceID)?.EventDateTimeStart %>">

        <label>Satisfaction Score</label>
        <input type="number" name="SurveySatisfactionScore" min="1" max="5"
            value="<%= survey.SurveySatisfactionScore %>" />

        <label>Usefulness Score</label>
        <input type="number" name="SurveyUsefulnessScore" min="1" max="5" value="<%= survey.SurveyUsefulnessScore %>" />

        <label>Recommendation Score</label>
        <input type="number" name="SurveyRecommendationScore" min="1" max="5"
            value="<%= survey.SurveyRecommendationScore %>" />

        <label>Overall Score</label>
        <input type="number" name="SurveyOverallScore" min="1" max="5" value="<%= survey.SurveyOverallScore %>" />

        <label>Comments</label>
        <textarea name="SurveyComments" rows="3"><%= survey.SurveyComments %></textarea>

        <label>Submission Date</label>
        <input type="date" name="SurveySubmissionDate" value="<%= survey.SurveySubmissionDate %>" />

        <button class="btn-submit">Save Changes</button>

    </form>

</div>