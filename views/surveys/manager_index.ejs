<section class="page-container">
    <div class="container-inner">

        <!-- HEADER -->
        <div class="container-header">
            <h1 class="page-title"><%= title %></h1>
            <div class="heading-underline"></div>
        </div>

        <!-- CONTEXT PARAGRAPH -->
        <% if (mode === "types") { %>
            <p class="text-muted">
                Select an event type below to view scheduled occurrences.
            </p>
        <% } else { %>
            <p class="text-muted">
                Select a specific event occurrence below to view its survey results.
            </p>

            <div class="btn-wrapper" style="margin-bottom: 1rem;">
                <a href="/surveys" class="btn btn-secondary btn-small">← Back to Event Types</a>
            </div>
        <% } %>

        <!-- SEARCH + CONTROLS -->
        <div class="table-controls">

            <div></div> <!-- keeps layout aligned -->

            <form 
                action="<%= mode === 'types' ? '/surveys' : '/surveys/type/' + event.event_id %>" 
                method="GET" 
                class="search-form"
            >
                <input 
                    type="text"
                    name="q"
                    placeholder="<%= mode === 'types' ? 'Search event types…' : 'Search location…' %>"
                    value="<%= typeof q !== 'undefined' ? q : '' %>"
                >

                <button type="submit" class="btn btn-secondary btn-small">Search</button>

                <% if (q) { %>
                    <a href="<%= mode === 'types' ? '/surveys' : '/surveys/type/' + event.event_id %>" 
                       class="search-clear-link">
                        Clear
                    </a>
                <% } %>
            </form>
        </div>

        <!-- DATA TABLE OR EMPTY STATE -->
        <% if (data.length === 0) { %>

            <p>No records found.</p>

        <% } else { %>

            <div class="table-container">

                <% if (mode === 'types') { %>

                    <!-- TABLE: EVENT TYPES -->
                    <table>
                        <thead>
                            <tr>
                                <th>Event Name</th>
                                <th>Type</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            <% data.forEach(item => { %>
                                <tr>
                                    <td><strong><%= item.name %></strong></td>
                                    <td><%= item.type %></td>

                                    <td class="table-actions">
                                        <a href="/surveys/type/<%= item.event_id %>"
                                           class="btn btn-outline btn-table">
                                            View Occurrences
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>

                <% } else { %>

                    <!-- TABLE: OCCURRENCES -->
                    <table>
                        <thead>
                            <tr>
                                <th>Date & Time</th>
                                <th>Location</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            <% data.forEach(item => { %>
                                <tr>
                                    <td><%= new Date(item.starts_at).toLocaleString() %></td>
                                    <td><%= item.location %></td>

                                    <td class="table-actions">
                                        <a href="/surveys/occurrence/<%= item.event_occurrence_id %>"
                                           class="btn btn-outline btn-table">
                                            View Results
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>

                <% } %>

            </div>

        <% } %>

        <!-- OPTIONAL BACK BUTTON (bottom spacing) -->
        <% if (mode === "occurrences") { %>
            <div class="btn-wrapper" style="margin-top: 2rem;">
                <a href="/surveys/type/<%= event.event_id %>" 
                   class="btn btn-secondary btn-lg">
                    ← Back to Occurrences
                </a>
            </div>
        <% } %>

    </div>
</section>
