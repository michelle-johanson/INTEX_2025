<div class="page-container">

    <h1 class="page-title"><%= contextName || 'Post-Event' %> Surveys</h1>

    <% 
        // 1. ROBUST MANAGER CHECK
        const roleRaw = session.access_level || session.role || (session.user && (session.user.access_level || session.user.role)) || "";
        const isManager = roleRaw.toLowerCase() === "manager" || roleRaw.toLowerCase() === "admin";
    %>

    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem; flex-wrap: wrap; gap: 1rem;">
        
        <% 
            // The occurrence variable is ONLY passed when viewing Level 3 results (/occurrence/:id)
            const targetId = (typeof occurrence !== 'undefined' && occurrence) ? occurrence.event_occurrence_id : ''; 
        %>

        <% if (isManager && targetId) { %> 
            <a href="/surveys/new?event_occurrence_id=<%= targetId %>" class="btn btn-primary btn-small">
                + Add Survey Response
            </a>
        <% } else { %>
            <div></div> <% } %>
        <form action="" method="GET" style="display: flex; gap: 0.5rem; align-items: center;">
            <input type="text" name="search" placeholder="Search name or comments..." 
                   value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>" 
                   style="padding: 0.4rem; border: 1px solid #ccc; border-radius: 4px; width: 250px;">
            <button type="submit" class="btn btn-secondary btn-small">Search</button>
            
            <% if (typeof searchTerm !== 'undefined' && searchTerm) { %>
                <a href="?" style="color: #666; text-decoration: none; font-size: 0.9rem;">Clear</a>
            <% } %>
        </form>
    </div>

    <% if (surveys.length === 0) { %>
        <div style="background: #f8f9fa; padding: 2rem; text-align: center; border-radius: 8px;">
            <p class="text-muted" style="margin: 0;">No surveys found.</p>
        </div>
    <% } else { %>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Event</th>
                    <th>Date</th>
                    <th>Participant</th>
                    <th>Overall Score</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% surveys.forEach(s => { %>
                    <tr>
                        <td><%= s.event_name %></td>
                        <td><%= new Date(s.starts_at).toLocaleDateString() %></td>
                        <td><%= s.first_name %> <%= s.last_name %></td>
                        
                        <td>
                            <span style="color: #f0ad4e; font-weight: bold;">
                                <%= "★".repeat(s.overall_score) %>
                            </span>
                            <span style="color: #ddd;">
                                <%= "★".repeat(5 - s.overall_score) %>
                            </span>
                            <span style="font-size: 0.85rem; color: #777; margin-left: 5px;">
                                (<%= s.overall_score %>)
                            </span>
                        </td>

                        <td class="table-actions">
                            <a href="/surveys/<%= s.event_occurrence_id %>/<%= s.participant_id %>" class="btn btn-secondary btn-small">View</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>

    <% if (isManager && typeof occurrence !== 'undefined') { %>
        <div style="margin-top: 2rem; border-top: 1px solid #eee; padding-top: 1rem;">
            <a href="/surveys/type/<%= occurrence.event_id %>" class="btn btn-secondary">
                &larr; Back to <%= occurrence.event_name %> Occurrences
            </a>
        </div>
    <% } %>

</div>