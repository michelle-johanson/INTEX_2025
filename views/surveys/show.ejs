<div class="page-container">

    <h1 class="page-title">Survey Details</h1>

    <div class="detail-card">

        <div class="detail-row">
            <span class="detail-label">Event</span>
            <span class="detail-value">
                <%= event?.EventName %>
            </span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Occurrence</span>
            <span class="detail-value">
                <%= occurrence?.EventDateTimeStart %>
            </span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Participant</span>
            <span class="detail-value">
                <%= participant?.FirstName %>
                    <%= participant?.LastName %>
            </span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Satisfaction</span>
            <span class="detail-value">
                <%= survey.SurveySatisfactionScore %> / 5
            </span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Usefulness</span>
            <span class="detail-value">
                <%= survey.SurveyUsefulnessScore %> / 5
            </span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Recommendation</span>
            <span class="detail-value">
                <%= survey.SurveyRecommendationScore %> / 5
            </span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Overall</span>
            <span class="detail-value">
                <%= survey.SurveyOverallScore %> / 5
            </span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Comments</span>
            <span class="detail-value">
                <%= survey.SurveyComments || "â€”" %>
            </span>
        </div>

        <div class="detail-row">
            <span class="detail-label">Submitted</span>
            <span class="detail-value">
                <%= survey.SurveySubmissionDate %>
            </span>
        </div>

        <% if (session && session.access_level==="manager" ) { %>
            <div class="detail-actions">
                <a href="/surveys/<%= survey.EventOccurrenceID %>/<%= survey.ParticipantID %>/edit">Edit</a>
            </div>
            <% } %>

    </div>

</div>