<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>
        <%= title %>
    </title>

    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <%- include("../partials/navbar") %>

        <div class="container mt-4">
            <h1>
                <%= participant.first_name %>
                    <%= participant.last_name %>
            </h1>

            <p><strong>Email:</strong>
                <%= participant.email %>
            </p>
            <p><strong>Phone:</strong>
                <%= participant.phone %>
            </p>
            <p><strong>Program:</strong>
                <%= participant.program %>
            </p>

            <% if (session.access_level==='admin' ) { %>
                <a href="/participants/<%= participant.id %>/edit" class="btn btn-warning">Edit</a>

                <form action="/participants/<%= participant.id %>/delete" method="POST" style="display:inline;">
                    <button class="btn btn-danger">Delete</button>
                </form>
                <% } %>

                    <br><br>
                    <a href="/participants" class="btn btn-secondary">Back</a>
        </div>

</body>

</html>