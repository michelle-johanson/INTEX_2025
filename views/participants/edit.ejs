<div class="page-container">

    <h1 class="page-title">Edit Participant</h1>

    <form action="/participants/<%= participant.ParticipantID %>/edit" method="POST" class="form">

        <label>Email</label>
        <input type="email" name="Email" value="<%= participant.Email %>" required />

        <label>First Name</label>
        <input type="text" name="FirstName" value="<%= participant.FirstName %>" required />

        <label>Last Name</label>
        <input type="text" name="LastName" value="<%= participant.LastName %>" required />

        <label>Date of Birth</label>
        <input type="date" name="DOB" value="<%= participant.DOB %>" required />

        <label>Role</label>
        <input type="text" name="Role" value="<%= participant.Role %>" />

        <label>Phone</label>
        <input type="text" name="Phone" value="<%= participant.Phone %>" />

        <label>City</label>
        <input type="text" name="City" value="<%= participant.City %>" />

        <label>State</label>
        <input type="text" name="State" value="<%= participant.State %>" />

        <label>Zip Code</label>
        <input type="text" name="Zip" value="<%= participant.Zip %>" />

        <label>School or Employment</label>
        <input type="text" name="SchoolOrEmployment" value="<%= participant.SchoolOrEmployment %>" />

        <label>Field of Interest</label>
        <input type="text" name="FieldOfInterest" value="<%= participant.FieldOfInterest %>" />

        <label>Total Donations</label>
        <input type="number" name="TotalDonations" value="<%= participant.TotalDonations %>" min="0" />

        <button class="btn-submit">Save Changes</button>
    </form>

</div>
