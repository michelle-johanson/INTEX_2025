<div class="page-container">

    <h1 class="page-title">Edit Participant</h1>

    <form action="/participants/<%= participant.participant_id %>/edit" method="POST" class="form">

        <label>Email</label>
        <input type="email" name="Email" value="<%= participant.email %>" required />

        <label>First Name</label>
        <input type="text" name="FirstName" value="<%= participant.first_name %>" required />

        <label>Last Name</label>
        <input type="text" name="LastName" value="<%= participant.last_name %>" required />

        <label>Date of Birth</label>
        <input type="date" 
               name="DOB" 
               value="<%= participant.dob ? new Date(participant.dob).toISOString().split('T')[0] : '' %>" 
               required />

        <label>Role</label>
        <input type="text" name="Role" value="<%= participant.role %>" />

        <label>Phone</label>
        <input type="text" name="Phone" value="<%= participant.phone %>" />

        <label>City</label>
        <input type="text" name="City" value="<%= participant.city %>" />

        <label>State</label>
        <input type="text" name="State" value="<%= participant.state %>" />

        <label>Zip Code</label>
        <input type="text" name="Zip" value="<%= participant.zip %>" />

        <label>School or Employment</label>
        <input type="text" name="SchoolOrEmployment" value="<%= participant.school_or_employer %>" />

        <label>Field of Interest</label>
        <input type="text" name="FieldOfInterest" value="<%= participant.field_of_interest %>" />

        <!-- #TO-DO: create class for flex container with gap: 1rem; align-items: center; -->
        <div class="d-flex mt-2">
            <button class="btn-submit">Save Changes</button>
            <a href="/participants/<%= participant.participant_id %>">Cancel</a>
        </div>
    </form>

</div>