<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>
        <%= title %>
    </title>

    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <%- include("../partials/navbar") %>

        <div class="container mt-4" style="max-width: 600px;">
            <h1>Edit Participant</h1>

            <form action="/participants/<%= participant.id %>/edit" method="POST">

                <div class="mb-3">
                    <label>First Name</label>
                    <input name="first_name" class="form-control" value="<%= participant.first_name %>" required>
                </div>

                <div class="mb-3">
                    <label>Last Name</label>
                    <input name="last_name" class="form-control" value="<%= participant.last_name %>" required>
                </div>

                <div class="mb-3">
                    <label>Email</label>
                    <input name="email" type="email" class="form-control" value="<%= participant.email %>">
                </div>

                <div class="mb-3">
                    <label>Phone</label>
                    <input name="phone" class="form-control" value="<%= participant.phone %>">
                </div>

                <div class="mb-3">
                    <label>Program</label>
                    <input name="program" class="form-control" value="<%= participant.program %>">
                </div>

                <button class="btn btn-success">Save Changes</button>

            </form>

            <br>
            <a href="/participants" class="btn btn-secondary">Cancel</a>
        </div>

</body>

</html>