<div class="page-container">
    <div class="page-card-form">

        <h2>Edit Participant</h2>

        <form action="/participants/<%= participant.participant_id %>/edit" method="POST" class="form">

            <label for="Email">Email</label>
            <input id="Email" type="email" name="Email" value="<%= participant.email %>" required />

            <label for="FirstName">First Name</label>
            <input id="FirstName" type="text" name="FirstName" value="<%= participant.first_name %>" required />

            <label for="LastName">Last Name</label>
            <input id="LastName" type="text" name="LastName" value="<%= participant.last_name %>" required />

            <label for="DOB">Date of Birth</label>
            <input id="DOB" type="date" name="DOB"
                value="<%= participant.dob ? new Date(participant.dob).toISOString().split('T')[0] : '' %>" required />

            <label for="Role">Role</label>
            <input id="Role" type="text" name="Role" value="<%= participant.role %>" />

            <label for="Phone">Phone</label>
            <input id="Phone" type="text" name="Phone" value="<%= participant.phone %>" />

            <label for="City">City</label>
            <input id="City" type="text" name="City" value="<%= participant.city %>" />

            <label for="State">State</label>
            <input id="State" type="text" name="State" value="<%= participant.state %>" />

            <label for="Zip">Zip Code</label>
            <input id="Zip" type="text" name="Zip" value="<%= participant.zip %>" />

            <label for="SchoolOrEmployment">School or Employment</label>
            <input id="SchoolOrEmployment" type="text" name="SchoolOrEmployment"
                value="<%= participant.school_or_employer %>" />

            <label for="FieldOfInterest">Field of Interest</label>
            <input id="FieldOfInterest" type="text" name="FieldOfInterest"
                value="<%= participant.field_of_interest %>" />

            <div class="btn-wrapper">
                <button class="btn btn-primary btn-lg">Save Changes</button>
                <a href="/participants/<%= participant.participant_id %>" class="btn btn-secondary btn-lg">
                    Cancel
                </a>
            </div>

        </form>

    </div>
</div>