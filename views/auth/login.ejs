<!-- =====================================
     LOGIN PAGE (views/auth/login.ejs)
     
     Methods: GET /auth/login, POST /auth/login
     Access: open to all visitors
===================================== -->

<div class="page-card">
    <!-- PAGE TITLE -->
    <h2 class="page-title">Login</h2>
    <p>Welcome back! Enter your credentials to continue.</p>

    <!-- ERROR MESSAGE -->
    <% if (error) { %>
        <div class="form-error">
            <%= error %>
        </div>
    <% } %>

    <!-- LOGIN FORM -->
    <form class="form" action="/auth/login" method="POST">
        <label for="username">Email</label>
        <input id="username" type="text" name="username" required>

        <label for="password">Password</label>
        <input id="password" type="password" name="password" required>

        <div class="mt-3 btn-wrapper">
            <button type="submit" class="btn btn-primary">Login</button>
            <p class="text-muted">
                Don't have an account? 
                <a href="/auth/signup" style="font-weight: bold;">Sign up now!</a>
            </p>
        </div>
    </form>
</div>
